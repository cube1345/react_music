# EditorConfig is awesome: https://EditorConfig.org

# 表示这是最顶层的配置文件
root = true

# 对所有文件生效
[*]
# 设置文件编码为 UTF-8
charset = utf-8
# 缩进风格使用空格
indent_style = space
# 缩进大小为 2 个空格
indent_size = 2
# 换行符使用 lf
end_of_line = lf
# 文件末尾插入空行
insert_final_newline = true
# 删除行尾空格
trim_trailing_whitespace = true

# 对 Markdown 文件特殊配置
[*.md]
# Markdown 文件中行尾空格有特殊意义，不删除
trim_trailing_whitespace = false
